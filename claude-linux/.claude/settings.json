{
  "cleanupPeriodDays": 30,
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Read(./.git/config)",
      "Read(./package.json)",
      "Read(./Makefile)",
      "Read(./go.mod)",
      "Read(./requirements.txt)",
      "Read(./Gemfile)",
      "Read(./Cargo.toml)",
      "Read(./composer.json)",
      "WebSearch"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./.envrc)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/id_*)",
      "Read(~/.gnupg/**)",
      "Read(**/.git/credentials)",
      "Read(**/credentials.json)",
      "Read(**/service-account*.json)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(kill:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-logger.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/bash-command-logger.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notification.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-notification.sh"
          }
        ]
      }
    ]
  },
  "outputStyle": "concise",
  "language": "japanese",
  "alwaysThinkingEnabled": true
}

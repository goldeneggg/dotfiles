{
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 30,
  "language": "japanese",
  "outputStyle": "concise",
  "permissions": {
    "allow": [
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(git branch *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(ls *)",
      "Read(./.env.example)",
      "Read(./.env.sample)",
      "Read(./.git/config)",
      "Read(./Cargo.toml)",
      "Read(./Gemfile)",
      "Read(./Makefile)",
      "Read(./composer.json)",
      "Read(./go.mod)",
      "Read(./package.json)",
      "Read(./requirements.txt)",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo *)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/.git/credentials)",
      "Read(**/credentials.json)",
      "Read(**/service-account*.json)",
      "Read(./.env)",
      "Read(./.envrc)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.ssh/id_*)"
    ],
    "ask": [
      "Bash(chmod *)",
      "Bash(chown *)",
      "Bash(cp *)",
      "Bash(curl *)",
      "Bash(kill *)",
      "Bash(mv *)",
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(touch *)",
      "Bash(wget *)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-logger.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/bash-command-logger.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notification.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-notification.sh"
          }
        ]
      }
    ]
  }
}

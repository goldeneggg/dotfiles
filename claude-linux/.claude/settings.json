{
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 30,
  "language": "japanese",
  "outputStyle": "concise",
  "permissions": {
    "allow": [
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(git branch *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(ls *)",
      "Read(./.env.example)",
      "Read(./.env.sample)",
      "Read(./.git/config)",
      "Read(./Cargo.toml)",
      "Read(./Gemfile)",
      "Read(./Makefile)",
      "Read(./composer.json)",
      "Read(./go.mod)",
      "Read(./package.json)",
      "Read(./requirements.txt)",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo *)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/.git/credentials)",
      "Read(**/credentials.json)",
      "Read(**/service-account*.json)",
      "Read(./.env)",
      "Read(./.envrc)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.ssh/id_*)"
    ],
    "ask": [
      "Bash(chmod *)",
      "Bash(chown *)",
      "Bash(cp *)",
      "Bash(curl *)",
      "Bash(kill *)",
      "Bash(mv *)",
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(touch *)",
      "Bash(wget *)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/SessionStart-startup.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/UserPromptSubmit.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PreToolUse-Bash.sh"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PreToolUse-WebFetch.sh"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PreToolUse-WebSearch.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PermissionRequest.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PostToolUse-Bash.sh"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PostToolUse-WebFetch.sh"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PostToolUse-WebSearch.sh"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PostToolUseFailure-Bash.sh"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PostToolUseFailure-WebFetch.sh"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PostToolUseFailure-WebSearch.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/Notification.sh"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/SubagentStart.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/SubagentStop.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/Stop.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/PreCompact-auto.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "logout|prompt_input_exit|bypass_permissions_disabled|other",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/SessionEnd-except-clear.sh"
          }
        ]
      }
    ]
  }
}
